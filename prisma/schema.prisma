generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enum for favorite type
enum Type {
  MOVIE
  TV_SHOW
}

// Favorite model definition
model Favorite {
  id        Int      @id @default(autoincrement())
  title     String
  type      Type
  director  String
  budget    String
  location  String
  duration  String
  year      String
  createdAt DateTime @default(now())
}
